<!DOCTYPE html>
<html lang="{{config.siteLang}}">

    <head>
        <meta charset="utf-8">
        <title>{{config.siteTitle}}</title>
        <meta name="description" content="">
        {# <base href="./"> #}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# <link rel="manifest" href="site.webmanifest"> #}
        {# <link rel="apple-touch-icon" href="icon.png"> #}
        <link rel="icon" type="image/svg+xml" href="/images/favicon/favicon.svg">
        <link rel="icon" type="image/png" href="/images/favicon/favicon.png">
        {% block styles %}{% endblock %}
        <link type="text/css" rel="stylesheet" href=/css/themes/{{config.theme}}/{{"main.css" | bust}}/>
        <link rel="stylesheet" href="https://overpass-30e2.kxcdn.com/overpass.css">
    </head>

    <body class="{{ class }}" {% block bodyattribute %} {%endblock%}>

        {% include "_partials/background.njk" %}

        {% block menu %}
            {% include "_partials/menu.njk" %}
        {% endblock %}

        {% block content %}
            {% include "_partials/content.njk" %}
        {% endblock %}

        {% include "_partials/footer.njk" %}

        {% block scripts %}
            {% include "_partials/scripts.njk" %}
        {% endblock %}

        {% block matomo %}
            {% if config.matomo %}
                <script>
                    var _paq = window._paq = window._paq || [];
                    /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
                    _paq.push(['trackPageView']);
                    _paq.push(['enableLinkTracking']);
                    (function () {
                        var u = "{{config.matomo.url}}";
                        _paq.push([
                            'setTrackerUrl', u + 'matomo.php'
                        ]);
                        _paq.push(['setSiteId', '{{config.matomo.siteID}}']);
                        var d = document,
                            g = d.createElement('script'),
                            s = d.getElementsByTagName('script')[0];
                        g.async = true;
                        g.src = u + 'matomo.js';
                        s
                            .parentNode
                            .insertBefore(g, s);

                    })();
                </script>
            {% endif %}
        {% endblock %}
    </body>

</html>